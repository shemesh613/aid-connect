rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
    }

    // Tasks collection
    match /tasks/{taskId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null
        && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
            || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'requester');
      allow update: if request.auth != null
        && (
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
          ||
          (resource.data.status == 'open'
           && request.resource.data.status == 'taken'
           && request.resource.data.takenBy == request.auth.uid)
          ||
          (resource.data.status == 'taken'
           && resource.data.takenBy == request.auth.uid
           && request.resource.data.status == 'completed')
        );
      allow delete: if false;
    }

    // Settings collection (admin only write)
    match /settings/{settingId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Config collection (admin only - contains notification tokens)
    match /config/{configId} {
      allow read: if request.auth != null
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      allow write: if false;
    }
  }
}
